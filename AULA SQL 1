/* CRIACAO DE DATABASE */
CREATE DATABASE PROJETO; 

/* USANDO DATABASE */
USE PROJETO;

/* CRIANDO TABELA */
CREATE TABLE CLIENTE(
    NOME VARCHAR(30),
    SEXO CHAR(1),
    EMAIL VARCHAR(30),
    CPF INT(11),
    TELEFONE VARCHAR(30)
    ENDERECO VARCHAR(100)
);

/* MOSTRANDO AS TABELAS */
SHOW TABLES;

/* DESCOBRINDO AS CARACTERISTICAS DAS TABELAS*/
DESC CLIENTES;

/* INSERINDO REGISTROS NA TABELAS*/
INSERT INTO  CLIENTES('RICARDO', 'M', 'RICARDO.SOARES@EMAIL.COM', 12345678910, '+5511974343466', 'RUA UM, 123')

/* PROJECAO */
SELECT NOME, SEXO, EMAIL, NOW() AS HORA_DO_SELECT, 'RICARDO SOARES' AS NOME_DO_USUARIO_QUE_FEZ_A_QUERY FROM CLIENTE;

/* SELECÁO (É FEITA PELO WHERE) */

SELECT NOME, SEXO, EMAIL, NOW() AS HORA_DO_SELECT, 'RICARDO SOARES' AS NOME_DO_USUARIO_QUE_FEZ_A_QUERY FROM CLIENTE WHERE NOME = 'RICARDO';